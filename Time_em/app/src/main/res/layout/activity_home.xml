<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="right|center"
        android:padding="10dp"
        android:background="@color/sendTextColor"
        android:id="@+id/changeStatus"
        >
    	<ImageView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
			android:src="@drawable/scan_signin"
			android:id="@+id/imgStatus"/>
    	
    	<TextView android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Sign in"
			android:id="@+id/txtUserStatus"
    	    android:textColor="@color/textColor"
			android:layout_marginLeft="10dp"
    	    android:textSize="15sp"
    	    android:textStyle="bold"
    	    />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:id="@+id/graphLayout"
		android:layout_height="150dp"
		android:layout_below="@+id/changeStatus"
		android:layout_above="@+id/footer"
        android:orientation="horizontal"
		android:layout_gravity="center"
        >
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale6"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale5"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale4"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale3"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale2"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale1"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">
				<TextView
					android:layout_width="10dp"
					android:layout_height="1dp"
					android:background="@color/seperator"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:textColor="@color/black"
					android:id="@+id/scale0"/>
			</LinearLayout>
		</LinearLayout>
		<android.support.v7.widget.RecyclerView
			android:id="@+id/task_graph"
			android:layout_width="fill_parent"
			android:layout_height="match_parent"
			android:scrollbars="none"
			tools:listitem="@layout/graph_slider_row"/>
       <!-- <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/under_construction"
			android:adjustViewBounds="true"
			/>-->
    </LinearLayout>
 
</RelativeLayout>
